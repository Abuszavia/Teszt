<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>

    let body = document.body;
    window.onscroll = function () {
        setStickyMenu();
        test();
    };

    function setStickyMenu() {
        let nav = document.getElementById('menu');
        let scrollTop = document.documentElement.scrollTop;

        if (scrollTop >= 44) {

            nav.classList.add('sticky');

        } else {

            nav.classList.remove('sticky');
        }



    }
    function test(){
        let home =document.getElementById('back-to-top');
        let scrollTop = document.documentElement.scrollTop;

        if (scrollTop >= 44) {
            home.style.display = 'inline-block'
        }
        else {home.style.display = 'none'}
    }

    let menuToggle = document.getElementById('menuToggle');
    menuToggle.onclick = function () {
        let menu = document.querySelector('#menu .mobilMenuEffect');
        console.log(menu.style.display);
        if (menu.style.display !== 'flex') {
            menu.style.display = 'flex';
        } else {
            menu.style.display = 'none';
        }
    };
    var swiper = new Swiper('.swiper-container', {
        effect: 'coverflow',
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: 'auto',
        coverflowEffect: {
            rotate: 0,
            stretch: 0,
            depth: 100,
            modifier: 4,
            slideShadows: true,

        },
        loop: true
    });

    // Set the date we're counting down to
    let countDownDate = new Date("Dec 19, 2020 15:37:25").getTime();

    // Update the count down every 1 second
    let x = setInterval(function () {

        // Get today's date and time
        let now = new Date().getTime();

        // Find the distance between now and the count down date
        let distance = countDownDate - now;

        // Time calculations for days, hours, minutes and seconds
        let days = Math.floor(distance / (1000 * 60 * 60 * 24));
        let hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        let seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Display the result in the element with id="demo"
        document.getElementById("date-counter").innerHTML = days + " " + hours + " "
            + minutes + " " + seconds + " ";

        // If the count down is finished, write some text
        if (distance < 0) {
            clearInterval(x);
            document.getElementById("date-counter").innerHTML = "EXPIRED";
        }
    }, 1000);

/*    window.onscroll = function () {
        setHomeButton();};
